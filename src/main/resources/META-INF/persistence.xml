<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
>
    <persistence-unit name="CargoTrackerUnit">
        <jta-data-source>java:app/jdbc/CargoTrackerDatabase</jta-data-source>
        <shared-cache-mode>ALL</shared-cache-mode>
        <properties>
            <!-- See https://jakarta.ee/specifications/persistence/ -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/initital-data.sql" />
            <property name="eclipselink.logging.level" value="FINE" />
        </properties>
    </persistence-unit>
</persistence>
